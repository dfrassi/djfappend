<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>Content - Djf Append</name>
	<author>David Frassi</author>
	<creationDate>02 Febbraio 2010</creationDate>
	<copyright>(C) 2010 David Frassi All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@davidfrassi.it</authorEmail>
	<authorUrl>http://www.davidfrassi.it</authorUrl>
	<version>0.1.0 beta</version>
	<description>Djf Append Plugin Installed</description>
	
	<files >
		<filename plugin="djfappend">djfappend.php</filename>
		<filename>djfappend.css</filename>
	</files>	
		
	<languages folder="lang">
		<language tag="en-GB">en-GB.plg_djfappend.ini</language>
		<language tag="it-IT">it-IT.plg_djfappend.ini</language>
	</languages>
		
	<config>
	<fields name="params">
	<fieldset name="basic">
	<field name="access_level" type="list" default="registered" label="Access Level Add Button"  description="Livello accesso button add" >		
			<option value="18">Registered</option>
			<option value="24">Administrator</option>
			<option value="25">Super Administrator</option>
			
		</field>
			<field name="flv" type="text" default="flvremote"  label="flv" size="50" description="flv" />
		<field name="mp3" type="text" default="mp3remote"  label="mp3" size="50" description="mp3" />
		<field name="mp4" type="text" default="mp4remote"  label="mp4" size="50" description="mp4" />
		<field name="jpg" type="text" default="jpgremote"  label="jpg" size="50" description="jpg" />
	
	</fieldset>
	</fields>
	</config>
	
</extension>